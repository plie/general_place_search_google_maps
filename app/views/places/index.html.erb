<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <% if flash[:alert] %>
         <div class="alert alert-warning"><%= flash[:alert] %></div>
       <% end %>
      <div class="mx-auto mt-5" style="width: 400px">
        <div><h4>Enter Map Search criteria:</h4></div>
        <br>
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :customer_name, 'Customer '%>
            <%= text_field_tag :customer_name, nil, placeholder: 'Eg. Texas Capital', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :latitude, 'Latitude '%>
            <%= text_field_tag :latitude, nil, placeholder: 'In Decimal Degrees, Eg. 30.274375', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :longitude, 'Longitude '%>
            <%= text_field_tag :longitude, nil, placeholder: 'In Decimal Degrees, Eg. -97.7408387', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :type, 'Type  of Location '%>
            <%= select_tag :type, "<option>ATM</option><option>Bank</option><option>All</option>".html_safe, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :response_output, 'Response Output '%>
            <%= select_tag :response_output, "<option>JSON</option><option>XML</option>".html_safe, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :language, 'Language '%>
            <%= select_tag :language, "<option>English</option><option>Spanish</option><option>French</option>".html_safe, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :number_of_locations, 'Number of Locations '%>
            <%= number_field_tag :number_of_locations, nil, placeholder: 'In numbers only, up to 1000, Eg. 5', min: 0, step: 1, class: 'form-control' %>
            <br>
          </div>
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
