<div class="container">
  <div class="row mt-5">
    <div class="col-lg-6">
      <h4>Your results</h4>
      <p>Here are the first <%= @results.count %> results of your search. If you asked for more, the search only found these results.</p>
      <div>
        <%= link_to 'New Search', root_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <br>
  <table>
    <thead>
      <tr>
        <th scope="column">Item</th>
        <th scope="column">Name</th>
        <th scope="column">Rating</th>
        <th scope="column">Address</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each_with_index do |result, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <% result.map do |info| %>
            <td><%= info['name'] %></td>
            <td><%= info['rating'] %></td>
            <td><%= info['vicinity'] %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

